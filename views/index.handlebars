<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid mb-0 pb-3">
        <div class="container">
            <h1 class="display-3">{{title}}</h1>
            <p class="lead">A coding article archive for saving favorite coding articles and videos.</p>
            <hr class="my-2">
            <form action="/api/articles" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" aria-describedby="helpId"
                        placeholder="">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" id="author" aria-describedby="helpId"
                        placeholder="">
                    <label for="url">URL</label>
                    <input type="text" class="form-control" name="url" id="url" aria-describedby="helpId"
                        placeholder="">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="description" id="description" rows="2"></textarea>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="read" id="read" value="checkedValue">
                            Read
                        </label>
                    </div>
                </div>
                <input type="submit" value="Add Article" class="btn btn-primary btn-lg">
            </form>
        </div>
    </div>
    {{#each articles}}
    <div class="card">
        <div class="card-body pb-1">
            <h4 class="card-title">{{this.title}}</h4>
            <a>delete</a>
            <p class="author">Author: {{this.author}}</p>
        </div>
        <div class="card-body pt-0">
            <p class="article-description">Description: {{this.description}}</p>
            <a href={{this.url}} class="url" target="_blank">{{this.url}}</a>
        </div>
    </div>
    {{/each}}
</div>