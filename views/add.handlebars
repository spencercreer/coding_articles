<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid mb-0 pb-3">
        <div class="container">
            <h1 class="display-3">Add an Article</h1>
            <p class="lead">Enter Article Information</p>
            <hr class="my-2">
            <form action="/api/add" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" aria-describedby="helpId"
                        placeholder="">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" id="author" aria-describedby="helpId"
                        placeholder="">
                    <label for="url">URL</label>
                    <input type="text" class="form-control" name="url" id="url" aria-describedby="helpId"
                        placeholder="">
                    <label for="body">Description</label>
                    <textarea class="form-control" name="body" id="body" rows="2"></textarea>
                    <label for="technologies">Technologies</label>
                    <input type="text" class="form-control" name="technologies" id="technologies"
                        aria-describedby="helpId" placeholder="">
                </div>
                <input type="submit" value="Add Article" class="btn btn-primary btn-lg">
            </form>
        </div>
    </div>
</div>